<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Bro Chats"
             x:Class="Bro2Bro.Mobile.Views.MainPage">
  <ContentPage.Content>  
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>

      <Button Grid.Row="0" Text="NEW CHAT" HorizontalOptions="End" />
    
      <ListView Grid.Row="1" VerticalOptions="FillAndExpand" IsPullToRefreshEnabled="true" Refreshing="OnRefresh"  HasUnevenRows="true" x:Name="lvMessages" ItemsSource="{Binding Messages}" SeparatorVisibility="None" >
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <TextCell Text="{Binding Message}"/>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    </Grid>
  </ContentPage.Content>
</ContentPage>